doctype html
html
  head
    title Upload Form
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body(class="bg-light")
    .container.mt-5
      .card.shadow-sm
        .card-body
          h2.mb-4.text-center Form Upload Quà Tặng

          form(action="/api/upload/single" method="POST" enctype="multipart/form-data")
            .mb-3
              label.form-label(for="file") Chọn file
              input.form-control(type="file" name="file" id="file" required)

            .mb-3
              label.form-label(for="dob") Ngày sinh để xác thực
              input.form-control(type="date" name="dob" id="dob" required)

            button.btn.btn-primary(type="submit") Gửi
