    inset -2px -2px 4px rgba(255, 255, 255, 0.8);
    }
    /* --- KHUNG LỜI CHÚC --- */
    ::-webkit-scrollbar {
    width: 8px;
    /* độ rộng thanh cuộn dọc */
    height: 8px;
    /* độ cao thanh cuộn ngang (nếu có) */
    }
    ::-webkit-scrollbar-track {
    background: #ffe6f7;
    /* màu nền rãnh cuộn */
    border-radius: 10px;
    }
    ::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, #ff80b5, #ff4da6);
    border-radius: 10px;
    box-shadow: inset 0 0 2px rgba(255, 255, 255, 0.6);
    }
    ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, #ff66a8, #ff3399);
    }
    /* Firefox */
    * {
    scrollbar-width: thin;
    scrollbar-color: #ff99cc #ffe6f7;
    }
    .message-box {
    font-style: italic;
    width: 95%;
    background: #fff;
    border-radius: 20px;
    box-shadow:
    inset 2px 2px 4px rgba(255, 0, 150, 0.3),
    inset -2px -2px 4px rgba(255, 255, 255, 0.8);
    color: #ff4da6;
    font-size: 1.1rem;
    margin-bottom: 20px;
    text-align: left;
    padding: 10px 10px;
    max-height: 150px;
    /* bạn có thể chỉnh cao hơn hoặc thấp hơn */
    overflow-y: auto;
    overflow-x: hidden;
    scroll-behavior: smooth;
    }
    /* --- VIDEO BOX --- */
    .video-box {
    width: 100%;
    border-radius: 20px;
    background-color: #000;
    overflow: hidden;
    box-shadow:
    5px 5px 15px rgba(255, 190, 220, 0.4),
    -5px -5px 15px rgba(255, 255, 255, 0.9);
    }
    video {
    width: 100%;
    height: 300px;
    display: block;
    border-radius: 20px;
    }
    /* --- NÚT PHÁT / DỪNG --- */
    .controls {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
    }
    .btn {
    background: #fff0f6;
    border: none;
    border-radius: 25px;
    padding: 10px 20px;
    font-size: 1rem;
    color: #ff4da6;
    box-shadow:
    4px 4px 8px rgba(255, 170, 200, 0.4),
    -4px -4px 8px rgba(255, 255, 255, 0.9);
    cursor: pointer;
    transition: all 0.2s ease;
    }
    .btn:hover {
    box-shadow:
    inset 2px 2px 4px rgba(255, 180, 200, 0.4),
    inset -2px -2px 4px rgba(255, 255, 255, 0.9);
    background: #ffe6f7;
    }
    /* --- NỐT NHẠC BAY --- */
    .note {
    position: absolute;
    font-size: 1.5rem;
    color: #ff66b2;
    animation: floatNotes 4s linear forwards;
    pointer-events: none;
    }
    @keyframes floatNotes {
    0% {
    opacity: 0;
    transform: translateY(0) scale(0.5);
    }
    20% {
    opacity: 1;
    }
    100% {
    opacity: 0;
    transform: translateY(-200px) scale(1.2) rotate(20deg);
    }
    }
    /* --- RESPONSIVE --- */
    @media (max-width: 600px) {
    .radio-card {
    padding: 15px;
    border-radius: 20px;
    }
    .title {
    font-size: 1.8rem;
    }
    .circle {
    width: 25px;
    height: 25px;
    }
    .bar {
    width: 6px;
    height: 18px;
    }
    .btn {
    font-size: 0.9rem;
    padding: 8px 15px;
    }
    }
