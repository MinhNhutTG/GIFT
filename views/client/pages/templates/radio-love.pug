    font-size: 2.2rem;
    margin-bottom: 15px;
    margin-top: 0px;
    }
    /* --- NÚT ĐÈN RADIO --- */
    .top-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    margin-bottom: 15px;
    }
    .circle {
    width: 35px;
    height: 35px;
