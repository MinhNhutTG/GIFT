script.
  const music = document.getElementById('bgMusic');
  const voice = document.getElementById('voice');
  const playBtn = document.getElementById('playBtn');
  const stopBtn = document.getElementById('stopBtn');
  const voiceBtn = document.getElementById('voiceBtn');
  // Phát nhạc
  playBtn.addEventListener('click', () => {
  music.play();
  spawnNotes();
  });
  // Dừng nhạc
  stopBtn.addEventListener('click', () => {
  music.pause();
  music.currentTime = 0;
  });
  // Phát voice
  voiceBtn.addEventListener('click', () => {
  voice.play();
  });
  // Tạo hiệu ứng nốt nhạc
  function spawnNotes() {
  const symbols = ['🎵', '🎶', '🎼', '💗'];
  for (let i = 0; i < 8; i++) {
  const note = document.createElement('div');
  note.className = 'note';
  note.innerText = symbols[Math.floor(Math.random() * symbols.length)];
  note.style.left = Math.random() * 90 + '%';
  note.style.bottom = '10px';
  note.style.animationDuration = 3 + Math.random() * 2 + 's';
  document.body.appendChild(note);
  setTimeout(() => note.remove(), 5000);
  }
  }
  const messageBox = document.getElementById('message');
  const fullText = messageBox.innerText.trim(); // Lấy nội dung gốc
  messageBox.innerText = ''; // Xóa để chuẩn bị hiệu ứng

  let index = 0;
  const speed = 35; // tốc độ gõ (ms/1 ký tự) — có thể chỉnh chậm hơn (50-80)

  function typeEffect() {
    if (index < fullText.length) {
        messageBox.innerHTML += fullText.charAt(index);
        index++;
        messageBox.scrollTop = messageBox.scrollHeight; // cuộn xuống khi text dài
        setTimeout(typeEffect, speed);
    }
 }

    // Chạy hiệu ứng sau khi trang tải xong
  window.addEventListener('load', () => {
    setTimeout(typeEffect, 800); // delay 0.8s trước khi bắt đầu
 });
